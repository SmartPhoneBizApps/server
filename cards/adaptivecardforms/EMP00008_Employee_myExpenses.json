{
  "body": [
    {
      "type": "TextBlock",
      "text": "Expense Date",
      "isSubtle": true,
      "size": "medium"
    },
    {
      "type": "Input.Date",
      "placeholder": "Date",
      "id": "ExpenseDate",
      "value": "@currentDate"
    },
    {
      "type": "TextBlock",
      "text": "Expense Amount",
      "isSubtle": true,
      "size": "medium"
    },
    {
      "type": "Input.Number",
      "id": "ExpenseAmount",
      "min": 0,
      "max": 110,
      "placeholder": "Amount"
    },
    {
      "type": "TextBlock",
      "text": "Description",
      "isSubtle": true,
      "size": "medium"
    },
    {
      "type": "Input.Text",
      "style": "text",
      "isMultiline": true,
      "id": "ExpenseDetails"
    },
    {
      "type": "TextBlock",
      "isSubtle": true,
      "size": "medium",
      "text": "Currency"
    },
    {
      "placeholder": "Currency",
      "type": "Input.Text",
      "style": "text",
      "id": "Currency",
      "value": "GBP"
    },
    {
      "type": "TextBlock",
      "isSubtle": true,
      "size": "medium",
      "text": "Exp Type"
    },
    {
      "type": "Input.ChoiceSet",
      "style": "expanded",
      "id": "ExpType",
      "choices": [
        {
          "title": "Hotel",
          "value": "Hotel"
        },
        {
          "title": "Meals",
          "value": "Meals"
        },
        {
          "title": "Mileage",
          "value": "Mileage"
        },
        {
          "title": "MobileTelephone",
          "value": "MobileTelephone"
        },
        {
          "title": "ParkingTollCongestion",
          "value": "ParkingTollCongestion"
        },
        {
          "title": "AirTrainBusFare",
          "value": "AirTrainBusFare"
        }
      ]
    }
  ]
}
