{
  "cardMinRows": 4,
  "cardColumn": 3,
  "sap.app": {
    "id": "smartphoneapps",
    "type": "card",
    "title": "Sample of a List with StackedBar Chart",
    "subTitle": "Sample of a List with StackedBar chart",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "shortTitle": "A short title for this Card",
    "info": "Additional information about this Card",
    "description": "A long description for this Card",
    "tags": {
      "keywords": ["List", "Chart", "Card", "Sample"]
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "sap-icon://list"
    }
  },
  "sap.card": {
    "type": "List",
    "header": {
      "title": "@Title",
      "subTitle": "@subTitle",
      "status": {
        "text": "@statusText"
      },
      "actions": [
        {
          "type": "Custom",
          "parameters": {
            "type": "tabNavigation",
            "tab": "@HeaderActionURL"
          }
        }
      ]
    },
    "content": {
      "legend": {
        "items": {
          "Expected": "Notebook 13",
          "Actual": "Notebook 17"
        }
      },
      "maxOverValues": 700,
      "data": {
        "json": [
          {
            "Name": 2017,
            "Category": "Computer system accessories",
            "Expected": 200,
            "Actual": 500
          },
          {
            "Name": 2018,
            "Category": "Computer system accessories",
            "Expected": 300,
            "Actual": 320
          },
          {
            "Name": 2019,
            "Category": "Computer system accessories",
            "Expected": 140,
            "Actual": 255
          }
        ],
        "legend": {
          "items": {
            "Expected": "Notebook 13",
            "Actual": "Notebook 17"
          }
        },
        "maxOverValues": 700,
        "Notebooks": [
          {
            "Name": 2017,
            "Category": "Computer system accessories",
            "Expected": 200,
            "Actual": 500
          },
          {
            "Name": 2018,
            "Category": "Computer system accessories",
            "Expected": 300,
            "Actual": 320
          },
          {
            "Name": 2019,
            "Category": "Computer system accessories",
            "Expected": 140,
            "Actual": 255
          }
        ]
      },
      "maxItems": 3,
      "item": {
        "title": "{Name}",
        "description": "{Category}",
        "chart": {
          "type": "StackedBar",
          "displayValue": "{= ${Expected} + ${Actual}}K",
          "maxValue": "{maxOverValues}",
          "bars": [
            {
              "value": "{Expected}",
              "displayValue": "{legend/items/Expected}: {Expected}K",
              "legendTitle": "{legend/items/Expected}"
            },
            {
              "value": "{Actual}",
              "displayValue": "{legend/items/Actual}: {Actual}K",
              "legendTitle": "{legend/items/Actual}"
            }
          ]
        }
      }
    }
  }
}
