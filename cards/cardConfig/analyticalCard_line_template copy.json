{
  "Structure": {
    "sap.app": {
      "type": "card",
      "id": "smartphoneapps",
      "applicationVersion": {
        "version": "1.0.0"
      }
    },
    "cardColumn": 4,
    "cardMinRows": 5,
    "sap.card": {
      "type": "Analytical",
      "header": {
        "actions": [
          {
            "type": "Navigation",
            "url": "http://www.sap.com"
          }
        ],
        "type": "Numeric",
        "data": {
          "json": {
            "number": "18.5",
            "unit": "",
            "trend": "Down",
            "state": "Error",
            "max": {
              "number": 25,
              "unit": ""
            },
            "percentage": {
              "number": 74
            },
            "details": "Q1, 2018"
          }
        },
        "title": "@headerTitle",
        "subTitle": "@headerSubTitle",
        "unitOfMeasurement": "@UOM",
        "mainIndicator": {
          "number": "{number}",
          "unit": "{unit}",
          "trend": "{trend}",
          "state": "{state}"
        },
        "details": "{details}",
        "sideIndicators": [
          {
            "title": "max",
            "number": "{max/number}",
            "unit": "{max/unit}"
          },
          {
            "title": "percentage",
            "number": "{percentage/number}",
            "unit": "%"
          },
          {
            "title": "deviation",
            "number": "{percentage/number}",
            "unit": "%"
          }
        ]
      },
      "content": {
        "chartType": "Line",
        "legend": {
          "visible": "{legend/visible}",
          "position": "{legend/position}",
          "alignment": "{legend/alignment}"
        },
        "plotArea": {
          "dataLabel": {
            "visible": true
          },
          "categoryAxisText": {
            "visible": false
          },
          "valueAxisText": {
            "visible": false
          }
        },
        "title": {
          "text": "Line chart",
          "visible": true,
          "alignment": "Left"
        },
        "measureAxis": "valueAxis",
        "dimensionAxis": "categoryAxis",
        "data": {
          "json": {
            "dimensions": {
              "areaLabel": "Area"
            },
            "measures": {
              "scoreLabel": "Score",
              "targetLabel": "Target",
              "totalLabel": "Total"
            },
            "legend": {
              "visible": true,
              "position": "Bottom",
              "alignment": "TopLeft"
            },
            "list": [
              {
                "Area": "Leadership",
                "Score": 4.5,
                "Target": 4.5,
                "Total": 5
              },
              {
                "Area": "Communication",
                "Score": 4,
                "Target": 4.5,
                "Total": 5
              },
              {
                "Area": "Teamwork",
                "Score": 3,
                "Target": 4,
                "Total": 5
              },
              {
                "Area": "ProblemSolving",
                "Score": 4,
                "Target": 4.5,
                "Total": 5
              },
              {
                "Area": "Admin",
                "Score": 3,
                "Target": 4,
                "Total": 5
              }
            ]
          },
          "path": "/list"
        },
        "dimensions": [
          {
            "label": "{dimensions/areaLabel}",
            "value": "{Area}"
          }
        ],
        "measures": [
          {
            "label": "{measures/scoreLabel}",
            "value": "{Score}"
          },
          {
            "label": "{measures/targetLabel}",
            "value": "{Target}"
          },
          {
            "label": "{measures/totalLabel}",
            "value": "{Total}"
          }
        ]
      }
    }
  }
}
