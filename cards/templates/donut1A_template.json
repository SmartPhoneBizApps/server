{
  "sap.app": {
    "id": "smartphoneapp",
    "type": "card"
  },
  "cardMinRows": 4,
  "cardColumn": 4,
  "sap.card": {
    "type": "Analytical",
    "header": {
      "title": "Weather Failures"
    },
    "content": {
      "chartType": "Donut",
      "legend": {
        "visible": true,
        "position": "Bottom",
        "alignment": "Left"
      },
      "plotArea": {
        "dataLabel": {
          "visible": true,
          "showTotal": true
        }
      },
      "title": {
        "visible": false
      },
      "measureAxis": "size",
      "dimensionAxis": "color",
      "data": {
        "json": {},
        "path": "/measures"
      },
      "dimensions": [
        {
          "label": "Measure Name",
          "value": "{measureName}"
        }
      ],
      "measures": [
        {
          "label": "Value",
          "value": "{value}"
        }
      ]
    }
  }
}
